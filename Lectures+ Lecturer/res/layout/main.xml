<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <ImageView
            android:layout_width="220dp"
            android:layout_height="200dp"
            android:id="@+id/imageView" android:layout_gravity="center_horizontal"
            android:src="@drawable/logo_lecturer"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:layout_gravity="center_horizontal" android:textSize="15dp"/>
    <Button
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:text="@string/button_prepare"
            android:id="@+id/button_prepare" android:layout_column="2" android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal" android:background="@drawable/button" android:visibility="gone"/>
    <Button
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:text="@string/button_present"
            android:id="@+id/button_present" android:layout_column="2" android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal" android:background="@drawable/button" android:visibility="gone"/>
    <Button
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:text="@string/button_history"
            android:id="@+id/button_history" android:layout_column="2" android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal" android:background="@drawable/button"
            android:visibility="gone"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="@string/button_rename"
            android:id="@+id/button_rename" android:layout_column="2" android:layout_marginTop="50dp"
            android:background="@android:color/transparent"
            android:textColor="#ff6600" android:textStyle="bold" android:layout_gravity="center_horizontal"
            android:textSize="15sp" android:clickable="true" android:onClick="changeName"/>
</LinearLayout>

